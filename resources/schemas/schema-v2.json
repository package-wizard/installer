{
    "$id": "https://package-wizard.com/schemas/schema-v2.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Package Wizard configuration",
    "description": "Package Wizard configuration",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "wizard": {
            "$ref": "#/definitions/wizard"
        },
        "authors": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/author"
            }
        },
        "variables": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/variableYear"
                    },
                    {
                        "$ref": "#/definitions/variableYearRange"
                    },
                    {
                        "$ref": "#/definitions/variableDate"
                    }
                ]
            },
            "additionalProperties": false
        },
        "renames": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/rename"
            }
        },
        "copies": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/copy"
            }
        },
        "removes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/remove"
            }
        },
        "replaces": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/replace"
            }
        },
        "dependencies": {
            "type": "array",
            "items": [
                {
                    "$ref": "#/definitions/dependency"
                }
            ],
            "uniqueItems": true
        },
        "questions": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/questionAuthor"
                    },
                    {
                        "$ref": "#/definitions/questionLicense"
                    },
                    {
                        "$ref": "#/definitions/questionAskSelect"
                    },
                    {
                        "$ref": "#/definitions/questionAskText"
                    }
                ]
            },
            "additionalProperties": false
        }
    },
    "definitions": {
        "wizard": {
            "type": "object",
            "properties": {
                "install": {
                    "$ref": "#/definitions/wizardInstall"
                },
                "clean": {
                    "type": "boolean",
                    "default": true
                }
            },
            "additionalProperties": false
        },
        "wizardInstall": {
            "type": "object",
            "properties": {
                "composer": {
                    "type": "boolean",
                    "default": true
                },
                "npm": {
                    "type": "boolean",
                    "default": false
                },
                "yarn": {
                    "type": "boolean",
                    "default": false
                }
            },
            "additionalProperties": false
        },
        "author": {
            "type": "object",
            "properties": {
                "name": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "email": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "format": "email",
                    "default": null
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace",
                    "default": ":author:"
                },
                "format": {
                    "type": "string",
                    "default": ":name: <:email:>"
                }
            },
            "additionalProperties": false
        },
        "rename": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "rename"
                },
                "what": {
                    "type": "string",
                    "enum": [
                        "path",
                        "name"
                    ]
                },
                "source": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "what",
                "source",
                "target"
            ],
            "uniqueItems": true,
            "additionalProperties": false
        },
        "copy": {
            "type": "object",
            "properties": {
                "source": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                }
            },
            "required": [
                "source",
                "target"
            ],
            "uniqueItems": true,
            "additionalProperties": false
        },
        "remove": {
            "items": [
                {
                    "type": "string"
                }
            ],
            "uniqueItems": true,
            "additionalProperties": false
        },
        "replace": {
            "type": "object",
            "properties": {
                "id": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace"
                },
                "with": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ]
                }
            },
            "required": [
                "replace",
                "with"
            ],
            "uniqueItems": true,
            "additionalProperties": false
        },
        "dependency": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "composer",
                        "npm",
                        "yarn"
                    ],
                    "default": "composer"
                },
                "name": {
                    "type": "string",
                    "minLength": 3
                },
                "dev": {
                    "type": "boolean",
                    "default": false
                },
                "remove": {
                    "type": "boolean",
                    "default": false
                }
            },
            "required": [
                "name"
            ],
            "uniqueItems": true,
            "additionalProperties": false
        },
        "variableYear": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "year"
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace",
                    "default": ":year:"
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": false
        },
        "variableYearRange": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "yearRange"
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace",
                    "default": ":yearRange:"
                },
                "start": {
                    "type": "number",
                    "default": 1970
                }
            },
            "required": [
                "type",
                "start"
            ],
            "additionalProperties": false
        },
        "variableDate": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "date"
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace",
                    "default": ":date:"
                },
                "format": {
                    "type": "string",
                    "default": "Y-m-d"
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": false
        },
        "questionAuthor": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "default": null
                },
                "condition": {
                    "$ref": "#/definitions/condition"
                },
                "type": {
                    "type": "string",
                    "const": "author"
                },
                "author": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                }
                            ],
                            "default": null
                        },
                        "email": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "null"
                                }
                            ],
                            "format": "email",
                            "default": null
                        }
                    },
                    "additionalProperties": false
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace",
                    "default": ":author:"
                },
                "format": {
                    "type": "string",
                    "default": ":name: <:email:>"
                }
            },
            "required": [
                "type"
            ],
            "additionalProperties": false
        },
        "questionLicense": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "default": null
                },
                "condition": {
                    "$ref": "#/definitions/condition"
                },
                "type": {
                    "type": "string",
                    "const": "license"
                },
                "default": {
                    "type": "string",
                    "default": "MIT License"
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace",
                    "default": ":license:"
                },
                "filename": {
                    "type": "string",
                    "default": "LICENSE"
                }
            },
            "required": [
                "type",
                "default"
            ],
            "additionalProperties": false
        },
        "questionAskSelect": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "default": null
                },
                "condition": {
                    "$ref": "#/definitions/condition"
                },
                "type": {
                    "type": "string",
                    "const": "ask"
                },
                "prompt": {
                    "type": "string",
                    "const": "select"
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace"
                },
                "question": {
                    "type": "string",
                    "minLength": 1
                },
                "options": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "integer"
                            },
                            {
                                "type": "object",
                                "minProperties": 1,
                                "maxProperties": 1,
                                "propertyNames": {
                                    "type": "string"
                                },
                                "additionalProperties": {
                                    "type": "string"
                                }
                            }
                        ]
                    },
                    "minItems": 1,
                    "uniqueItems": true,
                    "additionalProperties": false
                },
                "default": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "required": {
                    "oneOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            },
            "required": [
                "type",
                "prompt",
                "replace",
                "question",
                "options"
            ]
        },
        "questionAskText": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "default": null
                },
                "condition": {
                    "$ref": "#/definitions/condition"
                },
                "type": {
                    "type": "string",
                    "const": "ask"
                },
                "prompt": {
                    "type": "string",
                    "const": "text"
                },
                "replace": {
                    "$ref": "#/definitions/valueReplace"
                },
                "question": {
                    "type": "string",
                    "minLength": 1
                },
                "default": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "placeholder": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "minLength": 0
                },
                "regex": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "trim": {
                    "type": "boolean",
                    "default": true
                },
                "required": {
                    "oneOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "string"
                        }
                    ],
                    "default": true
                }
            },
            "required": [
                "type",
                "prompt",
                "replace",
                "question"
            ],
            "additionalProperties": false
        },
        "valueReplace": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        }
                    ],
                    "uniqueItems": true,
                    "additionalProperties": false
                }
            ],
            "uniqueItems": true,
            "additionalProperties": false
        },
        "condition": {
            "oneOf": [
                {
                    "type": "boolean",
                    "const": true
                },
                {
                    "$ref": "#/definitions/comparator"
                }
            ]
        },
        "comparator": {
            "type": "object",
            "properties": {
                "for": {
                    "type": "string"
                },
                "operator": {
                    "type": "string",
                    "enum": [
                        "<",
                        "<=",
                        "=",
                        "!=",
                        ">",
                        ">=",
                        "in",
                        "notIn",
                        "contains",
                        "doesntContain",
                        "containsAll",
                        "doesntContainAll",
                        "pathExists",
                        "pathDoesNotExist"
                    ],
                    "default": "="
                },
                "value": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        },
                        {
                            "type": "array"
                        }
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "for",
                "comparator",
                "value"
            ],
            "additionalProperties": false
        }
    }
}
