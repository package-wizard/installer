{
    "$schema": "https://laravel-ide.com/schema/laravel-ide-v2.json",
    "codeGenerations": [
        {
            "id": "app.filler",
            "name": "Create Filler",
            "classSuffix": "Filler",
            "regex": ".+",
            "files": [
                {
                    "appNamespace": "Fillers",
                    "name": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}.php",
                    "template": {
                        "type": "stub",
                        "path": "stubs/filler.stub",
                        "parameters": {
                            "DummyNamespace": "${INPUT_FQN|namespace}",
                            "DummyClass": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}"
                        }
                    }
                }
            ]
        },
        {
            "id": "app.helper",
            "name": "Create Helper",
            "classSuffix": "Helper",
            "regex": ".+",
            "files": [
                {
                    "appNamespace": "Helpers",
                    "name": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}.php",
                    "template": {
                        "type": "stub",
                        "path": "stubs/helper.stub",
                        "parameters": {
                            "DummyNamespace": "${INPUT_FQN|namespace}",
                            "DummyClass": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}"
                        }
                    }
                }
            ]
        },
        {
            "id": "app.contract",
            "name": "Create Contract",
            "classSuffix": "Contract",
            "regex": ".+",
            "files": [
                {
                    "appNamespace": "Contract",
                    "name": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}.php",
                    "template": {
                        "type": "stub",
                        "path": "stubs/contract.stub",
                        "parameters": {
                            "DummyNamespace": "${INPUT_FQN|namespace}",
                            "DummyClass": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}"
                        }
                    }
                }
            ]
        }
    ],
    "completions": [
        {
            "complete": "directoryFiles",
            "condition": [
                {
                    "functionNames": [
                        "rule",
                        "validateSchema"
                    ],
                    "place": "parameter",
                    "parameters": [
                        1
                    ]
                }
            ],
            "options": {
                "directory": "tests/Fixtures/Rules",
                "suffixToClear": ".json",
                "recursive": true
            }
        },
        {
            "complete": "directoryFiles",
            "condition": [
                {
                    "functionNames": [
                        "vendor_path"
                    ],
                    "place": "parameter",
                    "parameters": [
                        1
                    ]
                }
            ],
            "options": {
                "directory": "vendor",
                "recursive": true
            }
        }
    ]
}
