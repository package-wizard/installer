{
    "$id": "https://package-wizard.com/schema/installer-v1.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Welcome4",
    "definitions": {
        "Welcome4": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "wizard": {
                    "$ref": "#/definitions/Wizard"
                },
                "project": {
                    "$ref": "#/definitions/Project"
                },
                "repository": {
                    "$ref": "#/definitions/Repository"
                },
                "authors": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Author"
                    }
                },
                "variables": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Variable"
                    }
                },
                "replaces": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Replace"
                    }
                },
                "removes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "copies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Copy"
                    }
                },
                "dependencies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Welcome4Dependency"
                    }
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Question"
                    }
                }
            },
            "required": [
                "authors",
                "copies",
                "dependencies",
                "project",
                "questions",
                "removes",
                "replaces",
                "repository",
                "variables",
                "wizard"
            ],
            "title": "Welcome4"
        },
        "Author": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            },
            "required": [
                "email",
                "name"
            ],
            "title": "Author"
        },
        "Copy": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "source": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                }
            },
            "required": [
                "source",
                "target"
            ],
            "title": "Copy"
        },
        "Welcome4Dependency": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "remove": {
                    "type": "boolean"
                }
            },
            "required": [
                "name",
                "remove"
            ],
            "title": "Welcome4Dependency"
        },
        "Project": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ]
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "description",
                "title",
                "url"
            ],
            "title": "Project"
        },
        "Question": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string"
                },
                "default": {
                    "$ref": "#/definitions/Default"
                },
                "replace": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "required": {
                    "type": "boolean"
                },
                "format": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "options": {
                    "$ref": "#/definitions/Options"
                },
                "paths": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Path"
                    }
                },
                "condition": {
                    "$ref": "#/definitions/Condition"
                },
                "dependencies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/QuestionDependency"
                    }
                },
                "remove": {
                    "type": "boolean"
                }
            },
            "required": [
                "type"
            ],
            "title": "Question"
        },
        "Condition": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "equals": {
                    "type": "string"
                }
            },
            "required": [
                "equals",
                "id",
                "type"
            ],
            "title": "Condition"
        },
        "QuestionDependency": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "dev": {
                    "type": "boolean"
                }
            },
            "required": [
                "name"
            ],
            "title": "QuestionDependency"
        },
        "Options": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "foo": {
                    "type": "string"
                },
                "bar": {
                    "type": "string"
                }
            },
            "required": [
                "bar",
                "foo"
            ],
            "title": "Options"
        },
        "Replace": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "replace": {
                    "type": "string"
                },
                "with": {
                    "type": "string"
                }
            },
            "required": [
                "replace",
                "with"
            ],
            "title": "Replace"
        },
        "Repository": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "organization": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "domain": {
                    "type": "string"
                }
            },
            "required": [
                "domain",
                "name",
                "organization"
            ],
            "title": "Repository"
        },
        "Variable": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string"
                },
                "replace": {
                    "type": "string"
                },
                "start": {
                    "type": "string",
                    "format": "integer"
                },
                "format": {
                    "type": "string"
                }
            },
            "required": [
                "replace",
                "type"
            ],
            "title": "Variable"
        },
        "Wizard": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "install": {
                    "type": "boolean"
                },
                "clean": {
                    "type": "boolean"
                }
            },
            "required": [
                "clean",
                "install"
            ],
            "title": "Wizard"
        },
        "Default": {
            "anyOf": [
                {
                    "type": "boolean"
                },
                {
                    "type": "string"
                }
            ],
            "title": "Default"
        },
        "Path": {
            "anyOf": [
                {
                    "$ref": "#/definitions/Copy"
                },
                {
                    "type": "string"
                }
            ],
            "title": "Path"
        }
    }
}
